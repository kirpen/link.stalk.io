# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET     /feature                           controllers.Application.feature()
GET     /install                           controllers.Application.install()
GET     /pricing                           controllers.Application.pricing()
GET     /contact                           controllers.Application.contact()
GET     /signup                           controllers.Application.signup()
GET     /login                           controllers.Application.login()
GET     /logout                     	controllers.Application.logout()
GET     /info                     	controllers.Application.info()
GET     /chat                     	controllers.Application.chat()

POST    /signup					controllers.Stalk.signup()
POST    /login					controllers.Stalk.login()
POST    /regist					controllers.Stalk.registStalkUser()
POST    /delete					controllers.Stalk.deleteStalkUser()
POST    /auth					controllers.Stalk.auth()
GET    /operator					controllers.Stalk.operator()



# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
